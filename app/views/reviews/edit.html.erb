<%= form_for([@pod, @review],html: { multipart: true }) do |form| %>
<h1>Edit Review</h1>
  <div class="rating-form">
    <%= form.label :rating %>
    <%= form.text_field :rating %>
  </div>
  <div class="field">
    <%= form.label :comment %>
    <%= form.text_field :comment %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<script>
	$('.rating-form').raty({
		path: '/assets/',
		scoreName: 'review[rating]'
	});
</script>
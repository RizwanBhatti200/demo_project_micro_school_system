

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2>Resend unlock instructions</h2>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email"  , class: "block border border-grey-light w-full p-3 rounded mb-4" ,placeholder:"Email" %>
  </div>

  <div class="actions">
    <%= f.submit "Resend unlock instructions",  class:"w-full text-center py-3 rounded bg-indigo-600 text-white hover:bg-indigo-700 focus:outline-none my-1"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

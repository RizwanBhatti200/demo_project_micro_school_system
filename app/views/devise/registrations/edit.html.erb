<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<!-- component -->
<div class="bg-gray-200 min-h-screen flex flex-col font-sans">
  <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2 ">
    <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.text_field :first_name,  class: "block border border-grey-light w-full p-3 rounded mb-4" ,placeholder:"First Name" %>
      </div>
      <div class="field">
        <%= f.text_field :last_name, class: "block border border-grey-light w-full p-3 rounded mb-4" ,placeholder:"Last Name" %>
      </div>
      <div class="field">
        <%= f.text_field :address, class: "block border border-grey-light w-full p-3 rounded mb-4" ,placeholder:"Address" %>
      </div>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block border border-grey-light w-full p-3 rounded mb-4" ,placeholder:"Email"%>
      </div>
      <div class="field">
        <%= render  "shared/edit_picture" , form: f, photo: @parent.image %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="field">
        <i>(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, autocomplete: "new-password" , class: "block border border-grey-light w-full p-3 rounded mb-4" ,placeholder:"New-password"%>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block border border-grey-light w-full p-3 rounded mb-4" ,placeholder:"Confirm-password"%>
      </div>
      <div class="field">
        <i>(we need your current password to confirm your changes)</i>
        <%= f.password_field :current_password, autocomplete: "current-password", class: "block border border-grey-light w-full p-3 rounded mb-4" ,placeholder:"Current-password"%>
      <div class="actio w-full py-3ns">
        <%= f.submit "Update", class:"w-full text-center py-3 rounded bg-indigo-600 text-white hover:bg-indigo-700 focus:outline-none my-1" %>
      </div>
      <div class="w-full text-center py-3 rounded bg-indigo-600 text-white hover:bg-indigo-700 focus:outline-none my-1">
        <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</div>
<% end %>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<!-- component -->
<div class=" bg-gray-200 min-h-screen flex flex-col font-sans">
  <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2 ">
    <div class="bg-white px-6 py-8 rounded shadow-xl text-black w-full">
      <%= image_tag "logos/mlogo.png", class: "object-cover h-48 w-full" %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block border-2 focus:outline-none focus:border-blue-500   w-full p-3 rounded mb-4" ,placeholder:"Email"%>
        </div>
        <div class="mt-2 ">
          <%= f.password_field :password, autocomplete: "current-password" ,class: "block border-2 focus:outline-none  focus:border-blue-500 w-full p-3 rounded mb-4" ,placeholder:"Password" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="text-gray-900">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end %>
        <div class="actions mt-3">
          <%= f.submit "Log in", class:"w-full text-center py-3 rounded bg-blue-600 text-white hover:bg-blue-700 focus:outline-none my-1" %>
        </div>
        <div class=" mt-3">
          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
<% end %>
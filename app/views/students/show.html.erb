
<%= render 'shared/show_picture', image: @student.image %>

<p>
  <strong>First name:</strong>
  <%= @student.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @student.last_name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @student.age %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @student.gender&.titleize %>
</p>
<p>
  <strong>Grade:</strong>
  <%= @student.grade %>
</p>
<% if @student.parent_id == current_parent.id %>
  <%= link_to 'Edit', edit_parent_student_path(@student) %> |
<% end %>  
<%= link_to 'Back', parent_students_path %>

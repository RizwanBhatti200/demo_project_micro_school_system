<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
       <th>Grade</th>
      <th>Gender</th> 
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parent.students.each do |student| %>
      <tr>
        <td><%= [student.first_name,student.last_name].join(' ').titleize %></td>
         <td><%= student.grade %></td>
        <td><%= student.age %></td>
        <td><%= student.gender.titleize %></td>
        <td><%= link_to 'Show', parent_student_path(@parent, student) %></td>
        <% if @parent&.id == current_parent&.id %>
          <td><%= link_to 'Edit', edit_parent_student_path(@parent, student) %></td>
          <td><%= link_to 'Destroy', [@parent, student], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>

</table>

<br>


<div class="pb-10">

  <div class="p-4 flex">
  
    <h1 class="text-3xl">Students</h1>
  </div>

  <div class="px-3 py-4 flex justify-center">
    <table class="w-full text-md bg-white shadow-md rounded mb-4">
      <thead class="border-b">
        <th class="text-left p-3 px-5">Name</th>
        <th class="text-left p-3 px-5">Age</th>
        <th class="text-left p-3 px-5">Grade</th>
        <th class="text-left p-3 px-5">Gender</th>
      </thead>
      <tbody>
        <% @parent.students.each do |student| %>
           <tr class="border-b hover:bg-orange-100 bg-gray-100">
            <td class="p-3 px-5"><%= [student.first_name,student.last_name].join(' ').titleize %></td>
            <td class="p-3 px-5"><%= student.age %></td>
            <td class="p-3 px-5"><%= student.grade %></td>
             <td class="p-3 px-5"><%= student.gender.titleize %></td>
            <td class="p-3 px-5 flex justify-end">
              <%= link_to 'Show', parent_student_path(@parent, student), class:'text-sm bg-yellow-500 hover:bg-yellow-600 text-white p-3 px-5 mr-2 rounded focus:outline-none focus:shadow-outline'%>
              <% if @parent&.id == current_parent&.id %>
                <%= link_to 'Edit', edit_parent_student_path(@parent, student), class:'text-sm bg-blue-500 hover:bg-blue-700 text-white p-3 px-5 mr-2 rounded focus:outline-none focus:shadow-outline'%>
                <%= link_to 'Destroy', [@parent, student], method: :delete, data: { confirm: 'Are you sure?' } , class:'text-sm bg-red-600 hover:bg-red-700 text-white p-3 px-5 mr-2 rounded focus:outline-none focus:shadow-outline'%>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


